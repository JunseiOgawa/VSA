{
  "name": "vrc-snap-archive",
  "version": "1.0.0",
  "description": "VRChat Screenshot Archive Manager",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.8",
    "@mui/material": "^5.14.8",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.6.2",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "npm run build-electron && electron ./dist/electron/main.js",
    "build-electron": "tsc -p electron/tsconfig.json",
    "watch-electron": "tsc -p electron/tsconfig.json -w",
    "dev": "react-scripts start",
    "dev-electron": "concurrently \"npm run dev\" \"npm run watch-electron\" \"wait-on http://localhost:3000 && electron ./dist/electron/main.js\"",
    "electron-dev": "concurrently \"npm run dev\" \"npm run watch-electron\" \"wait-on http://localhost:3000 && electron ./dist/electron/main.js\"",
    "build": "react-scripts build && npm run build-electron",
    "build-electron-app": "electron-builder --win",
    "build-all": "npm run build && npm run build-electron-app"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.vsa",
    "productName": "VRC Snap Archive",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "dist/electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/backend.exe",
        "to": "backend/backend.exe"
      }
    ],
    "win": {
      "target": "dir"
    }
  }
}
